library=libfpgamif.so
libsources=$(wildcard *.c)
libobjs=${libsources:.c=.o}

#-------------------------------------------------------------------------------
# Customized flags
#-------------------------------------------------------------------------------
IPATH=-I../fpgadrv


SLIBS=\
	-rdynamic \
	-Wl,--allow-multiple-definition \
	-Wl,--whole-archive \
	-Wl,--no-whole-archive
